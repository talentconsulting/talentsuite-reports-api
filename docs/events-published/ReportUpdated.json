{
    "$id": "https://talentsuite.uk/schemas/ReportUpdated",
    "$schema": "https://json-schema.org/draft/2020-12/schema",

    "type": "object",
    "properties": {
        "id": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time"},
        "completedTasks": { 
            "type": "string" 
        },
        "plannedTasks": { 
            "type": "string" 
        },
        "risks": { 
            "type": "array", 
            "items" : {
                "type" : "object",
                "properties": {
                    "id": {  "type": "string"  },
                    "description": { "type": "string" },
                    "mitigation": { "type": "string" },
                    "status": { "type": "string" }
                },
                "additionalProperties": false
            }
        },
        "userId": { 
            "type": "object",
            "properties": {
                "id": { "type": "string" },
                "firstname": { "type": "string" },
                "surname": { "type": "string" }
            }            
        },
        "projectId": {
            "type" : "string"
        },
        "sowId": {
            "type" : "string"
        },
        "clientId": {
            "type" : "string"
        }
    },
    "required": ["userId", "projectId", "clientId", "sowId", "id", "completedTasks", "plannedTasks"],
    "additionalProperties": false
}